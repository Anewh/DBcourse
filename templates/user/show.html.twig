{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h3>Профиль</h3>
<div class="input-group mb-3">
    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Фамилия</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Имя</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Отчество</th>
                <td>{{ user.patronimic }}</td>
            </tr>
            <tr>
                <th>Телефон</th>
                <td>{{ user.phone }}</td>
            </tr>
        </tbody>
    </table>
</div>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}"class="btn btn-primary" >Редактировать</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
